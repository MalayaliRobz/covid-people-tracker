<div class="flex flex-col w-full overflow-auto">
  <div class="flex items-center">
    <span class="font-extrabold text-xl">
      Activity Board for:
    </span>
    <span class="ml-2 mt-1">
      {{this.selectedDateAlone}}
    </span>
  </div>

  <div class="mt-2">
    <div class="bg-indigo rounded-lg p-5">
      <span class="text-4xl font-bold text-yellow-100">
        5
      </span>
      <span class="text-white font-semibold">
        People
      </span>
      <div class="text-xs text-white">
        you interacted with on {{this.selectedDateLong}}
      </div>
    </div>
  </div>

  <div class="flex flex-col my-5">
    <h3 class="font-semibold">People you interacted with :</h3>

    <div class="flex flex-wrap flex-1 overflow-auto">
      {{#each @peopleList as |per|}}
        <PersonCard 
          @person={{per}}
          @onPersonDeleteClick={{@onPersonDeleteClick}}/>
      {{/each}}
    </div>
  </div>
</div>